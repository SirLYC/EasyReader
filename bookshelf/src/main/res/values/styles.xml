<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressbarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">@color/colorOrange</item>
    </style>

    <style name="PasswordInputButton" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BookBatchManageActivityAnim">
        <item name="android:activityCloseEnterAnimation">@anim/book_batch_manager_last_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/book_batch_manager_exit_anim</item>
        <item name="android:activityOpenEnterAnimation">@anim/book_batch_manager_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/book_batch_manager_last_anim</item>
    </style>

    <style name="AppTheme.BookBatchManageActivity" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/BookBatchManageActivityAnim</item>
    </style>
</resources>
